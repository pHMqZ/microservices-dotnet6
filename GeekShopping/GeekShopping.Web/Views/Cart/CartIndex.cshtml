@model GeekShopping.Web.Models.CartViewModel

@if (Model.CartHeader != null && Model.Details.Count() > 0)
{
    <form method="post">
        <br />
        <input asp-for="CartHeader.UserId" hidden />
        <input asp-for="CartHeader.Id" hidden />
        <div>
            <div class="cart-border mt-4 container">
                <div class="card-header-tabs bg-dark text-light m-lg-0 row">
                    <div class="col-6">
                        <i class="fas fa-shopping-cart"></i> &nbsp;
                        Shopping Cart
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-warning btn-sm">
                            Continue Shopping
                        </a>
                    </div>
                </div>
                <div class="card-body">
                </div>
                <div class="card-footer row">
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div>
        <p>Your Cart is Empty!</p>
    </div>
}
